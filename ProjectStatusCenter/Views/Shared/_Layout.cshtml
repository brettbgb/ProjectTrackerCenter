<body>
    <script>
        $(document).ready(function () {
            // get current URL path and assign 'active' class
            var pathname = window.location.pathname;
            $('.navbar-nav > li > a[href="' + pathname + '"]').parent().addClass('active');
        })
    </script>


    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-primary" id="navbar1">
        <div class="container">
            <a class="navbar-brand mr-1 mb-1 mt-0" href="../">DOM IT - Bootstrap 4</a>
            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#collapsingNavbar" aria-expanded="false">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse justify-content-center collapse" id="collapsingNavbar" style="">

                <ul class="navbar-nav ml-auto mr-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="./">Console</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="layoutDd" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            General Documents
                        </a>
                        <div class="dropdown-menu" aria-labelledby="layoutDd">
                            <a class="dropdown-item px-2" href="javascript:alert('please set links');">General Information</a>
                            <a class="dropdown-item px-2" href="javascript:alert('please set links');">Mandatory Promo Guide</a>
                            <a class="dropdown-item px-2" href="javascript:alert('please set links');">New Appointment Guide</a>
                        </div>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="javascript:alert('please set links');">Department Criteria</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Agenda Reports</a>
                    </li>
                </ul>
                <form class="form-inline  my-2 my-lg-0">
                    <input class="form-control-sm mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success btn-sm my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="main-container">
        <div class="body-content">
            <div class="vh-100">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="uwm-footer container-fluid">
        <div class="row enterprise-row">
            <div class="col-sm-4 first copyright">
                Copyright © 2019 University of Washington | All rights reserved
            </div>

            <div class="col-sm-8 second navigation">
                <ul class="list-inline">
                    <li class="list-inline-item">
